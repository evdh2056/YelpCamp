<% include ../partials/header %>

<div class="container">
	<div class="row">
		<h1>Edit <%=campground.name%> </h1>
		<div class="newCampground">
			<form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST"> 
				<div class="form-group">
					<input class="form-control" type="text" name="campground[name]" placeholder="campground name" value="<%=campground.name%>"></input>				
				</div>
				<div class="form-group">
						<input class="form-control" type="number" name="campground[price]" placeholder="price per day" value="<%=campground.price%>" min="1.00" step="0.01"></input>				
					</div>
				<div class="form-group">
					<input class="form-control" type="text" name="campground[image]" placeholder="image URL" value="<%=campground.image%>"></input>				
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="campground[description]" placeholder="description" value="<%=campground.description%>"></input>
				</div>				
				<div class="form-group">
					<button class="btn-lg btn-primary">Submit</button>			
				</div>			
			</form>
			<a href="/campgrounds/<%=campground._id%>">Go Back</a>
		</div>
	</div>

</div>

<% include ../partials/footer %>
